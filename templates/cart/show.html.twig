{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
<div class="container">
<h1 class="mt-5">Panier</h1>


<table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for row in cartGoodies %}
            <tr>
                <td>{{ row.goodies.name }}</td>
                <td>{{ row.goodies.price}} €</td>
                <td>{{ row.quantity }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        <tr>
                <td colspan="2">Total:</td>
                <td>{{ total }} €</td>
            </tr>
        </tbody>
    </table>
</div>
{% endblock %}
