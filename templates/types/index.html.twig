{% extends 'base.html.twig' %}

{% block title %}Types index{% endblock %}

{% block body %}
<br>
<br>
<br>
<br>
<div class="container">
    <h1>Types index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Category</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for type in types %}
            <tr>
                <td>{{ type.id }}</td>
                <td>{{ type.category }}</td>
                <td>
                    <a href="{{ path('types_show', {'id': type.id}) }}">show</a>
                    <a href="{{ path('types_edit', {'id': type.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary mt-3" href="{{ path('types_new') }}">Create new</a>
</div>
<br>
<br>
<br>
{% endblock %}
